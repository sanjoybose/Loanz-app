@section styles{
	@Styles.Render("~/Content/css/bootstrap")
	@Styles.Render("~/Content/css/style")
	<style type="text/css">
		.application_navbar_lending {
			width: 100%;
			border-top: solid 5px #0c1c2c;
			min-height: 85px;
			margin-top: 65px;
		}

			.application_navbar_lending .top {
				width: 100%;
				border-bottom: solid 5px #ddd7d9;
				min-height: 75px;
				background: #01b3e3;
			}

				.application_navbar_lending .top .left {
					width: 70%;
					min-height: 75px;
					float: left;
					padding-top: 15px;
				}

					.application_navbar_lending .top .left h1 {
						font-size: 35px;
						color: #fff;
						margin: 0;
					}

				.application_navbar_lending .top .right {
					width: 30%;
					min-height: 75px;
					float: right;
					padding: 15px;
				}

		.lending_statement_cont {
			width: 75%;
			margin: 0 auto;
		}

		.Disclosure_Statement {
			width: 100%;
			height: 440px;
			border-top: solid 3px #2c4ea6;
			border-bottom: solid 3px #2c4ea6;
			overflow-y: scroll;
		}

			.Disclosure_Statement .lender {
				width: 50%;
				float: left;
			}

			.Disclosure_Statement .borrower {
				width: 49%;
				float: left;
			}

		.Disclosure_Statement_com {
			width: 25%;
			height: 250px;
			float: left;
			border: solid 1px #ccc;
			padding: 10px 25px;
			margin-top: 15px;
		}

		.certifications img {
			vertical-align: bottom;
		}
	</style>
}

@section scripts {
	@Scripts.Render("~/scripts/jquery")
	@Scripts.Render("~/scripts/ko")
	@Scripts.Render("~/scripts/ko-kendo")
	<script type="text/javascript" src="@Url.Content("~/Scripts/purl.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/vm_loan.js")"></script>

	<script type="text/javascript">
		$(document).ready(function () {
			var urlOptions = purl().param();
			if (urlOptions.pv && urlOptions.cRating) {
				var pv = parseInt(urlOptions.pv);
				var cRating = parseInt(urlOptions.cRating);
				var reason = urlOptions.reason;
				if (!isNaN(pv) && !isNaN(cRating)) {
					vm = new vmLoan(pv, cRating, reason);
				}
				else {
					vm = new vmLoan();
				}
			}
			else {
				vm = new vmLoan();
			}
			
			ko.applyBindings(vm);
		});
	</script>


}




