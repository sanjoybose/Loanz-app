    <script type="text/javascript">
        var vm = null;
        $(document).ready(function () {

            var urlOptions = purl().param();
            if (urlOptions.pv && urlOptions.cRating) {
                var pv = parseInt(urlOptions.pv);
                var cRating = parseInt(urlOptions.cRating);
                var reason = urlOptions.reason;
                if (!isNaN(pv) && !isNaN(cRating)) {
                    vm = new vmLoan(pv, cRating, reason);
                }
                else {
                    vm = new vmLoan();
                }
            }
            else {
                vm = new vmLoan();
            }

            ko.applyBindings(vm);
            vm.initValidation();
        });
    </script>
}


